{
  "name": "@azlabsjs/ts-build",
  "version": "0.1.16",
  "description": "Typescript library generator package",
  "main": "./lib/cjs/index.js",
  "typings": "./lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ./src/**",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:ts",
    "build:types": "tsc --emitDeclarationOnly",
    "build:ts": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "start": "tsc ./src/index.ts --watch",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "betterer": "betterer --strict"
  },
  "author": "azandrew-sidoine",
  "license": "MIT",
  "bin": {
    "ts-build": "./lib/cjs/build.js"
  },
  "dependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.1.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.3",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-polyfill-regenerator": "^0.3.1",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "chalk": "^4.1.2",
    "eslint": "^8.9.0",
    "fs-extra": "^10.0.1",
    "jsonfile": "^6.1.0",
    "progress-estimator": "^0.3.0",
    "rollup": "^2.68.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.2",
    "sade": "^1.8.1",
    "semver": "^7.3.5",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/types": "^7.17.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/babel__core": "^7.1.18",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jsonfile": "^6.1.0",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "deepmerge": "^4.2.2",
    "size-limit": "^7.0.8",
    "typescript": "^4.5.5",
    "@betterer/cli": "^5.1.6"
  },
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "size-limit": [
    {
      "path": "lib/cjs/index.js",
      "limit": "24 KB"
    },
    {
      "path": "lib/esm/index.js",
      "limit": "24 KB"
    }
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@azlabsjs"
  }
}
