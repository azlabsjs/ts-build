{
  "name": "@azlabsjs/ts-build",
  "version": "0.5.5",
  "description": "Typescript library generator package",
  "main": "./lib/cjs/index.js",
  "typings": "./lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "eslint ./src/**",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rimraf lib/ && npm run build:ts",
    "build:types": "tsc --emitDeclarationOnly",
    "build:ts": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "start": "tsc ./src/index.ts --watch",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "author": "azandrew-sidoine",
  "license": "MIT",
  "bin": {
    "ts-build": "lib/cjs/build.js"
  },
  "dependencies": {
    "@babel/core": "^7.27.7",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-runtime": "^7.27.4",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.30.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-plugin-annotate-pure-calls": "^0.5.0",
    "babel-plugin-dev-expression": "^0.2.3",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-polyfill-regenerator": "^0.6.4",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "chalk": "^5.4.1",
    "eslint": "^9.30.0",
    "fs-extra": "^11.3.0",
    "jsonfile": "^6.1.0",
    "progress-estimator": "^0.3.1",
    "ramda": "^0.31.3",
    "rollup": "^4.44.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "sade": "^1.8.1",
    "semver": "^7.7.2",
    "structured-clone-polyfill": "^0.0.2",
    "tiny-glob": "^0.2.9",
    "typescript-eslint": "^8.35.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/types": "^7.27.7",
    "@rollup/pluginutils": "^5.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/babel__core": "^7.20.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonfile": "^6.1.4",
    "@types/ramda": "^0.30.2",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "babel-loader": "^10.0.0",
    "deepmerge": "^4.3.1",
    "rimraf": "^6.0.1",
    "size-limit": "^11.2.0",
    "typescript": "^5.8.3"
  },
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "size-limit": [
    {
      "path": "lib/cjs/index.js",
      "limit": "24 KB"
    },
    {
      "path": "lib/esm/index.js",
      "limit": "24 KB"
    }
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@azlabsjs"
  }
}
