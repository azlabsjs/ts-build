{
  "name": "@azlabsjs/ts-build",
  "version": "0.4.3",
  "description": "Typescript library generator package",
  "main": "./lib/cjs/index.js",
  "typings": "./lib/types/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "lint": "eslint ./src/**",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "rimraf lib/ && npm run build:ts",
    "build:types": "tsc --emitDeclarationOnly",
    "build:ts": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
    "start": "tsc ./src/index.ts --watch",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "betterer": "betterer --strict"
  },
  "author": "azandrew-sidoine",
  "license": "MIT",
  "bin": {
    "ts-build": "./lib/cjs/build.js"
  },
  "dependencies": {
    "@babel/core": "^7.20.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.1",
    "@rollup/plugin-terser": "^0.4.0",
    "babel-plugin-annotate-pure-calls": "^0.4.0",
    "babel-plugin-dev-expression": "^0.2.3",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-polyfill-regenerator": "^0.3.1",
    "babel-plugin-transform-rename-import": "^2.3.0",
    "chalk": "^4.1.2",
    "eslint": "^8.28.0",
    "fs-extra": "^10.0.1",
    "jsonfile": "^6.1.0",
    "progress-estimator": "^0.3.0",
    "rollup": "^3.5.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.34.1",
    "sade": "^1.8.1",
    "semver": "^7.3.5",
    "tiny-glob": "^0.2.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/types": "^7.20.5",
    "@betterer/cli": "^5.1.6",
    "@rollup/pluginutils": "^5.0.2",
    "@size-limit/preset-small-lib": "^8.2.6",
    "@types/babel__core": "^7.1.18",
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jsonfile": "^6.1.0",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "deepmerge": "^4.2.2",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "typescript": "^4.9.3"
  },
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js",
      "default": "./lib/cjs/index.js"
    }
  },
  "size-limit": [
    {
      "path": "lib/cjs/index.js",
      "limit": "24 KB"
    },
    {
      "path": "lib/esm/index.js",
      "limit": "24 KB"
    }
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@azlabsjs"
  }
}
